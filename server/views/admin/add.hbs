<h1>add book</h1>

{{#if error}}
<p class="error-msg">{{error}}</p>
{{/if}}

<form method="POST" action="/admin/books/add">
  <label>title</label>
  <input type="text" name="title" value="{{form.title}}" required />
  <br>
  <label>author</label>
  <input type="text" name="author" value="{{form.author}}" required />
  <br>
  <label>isbn</label>
  <input type="text" name="isbn" value="{{form.isbn}}" required />
  <br>
  <label>category</label>
  <select name="category" required>
    <option value="" disabled selected>pick one</option>
    {{#each categories}}
    <option value="{{this.name}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
    {{/each}}
  </select>
  <br>
  <label>collection</label>
  <select name="collection_id" required>
    <option value="">select</option>
    {{#each collections}}
    <option value="{{this.id}}">{{this.name}} ({{this.username}})</option>
    {{/each}}
  </select>
  <br><br>
  <button type="submit">save</button>
  <a href="/admin/books">cancel</a>
</form>
